extends layout

block head

block body

    div#main

        div#clouds-background
            div.clouds-area

        div#logo-and-form
            div.content
                span.about-link-area
                    span.about-link About
                div#logo-wrapper
                    div#logo
                        // | WastedHumanity

                div#tagline
                    | Because what else is there to do in the 21st century?

                div#check-video-form
                    div.instructions
                        | Paste a youtube url to see how much time humanity wasted on it
                    div#input-border
                        input#video-url(type='text', placeholder='http://youtube.com/watch?v=')
                        span#check-video
                            span.label BAM!
                            img.form-loader(style='display:none;',src='small_loader.gif')
                    div#error-message(style='display:none')
                        | Hey dumbass! That's not a real youtube url!

        div#video-results(style='display:none;',data-current-video=currentVideo).content
            div.thumbnail.thumbnail-container
                img.thumbnail(src='video_thumbnail.png')
                div.overlay Click to play
            div.video-info
                div.video-title
                div.movie-length
                    | This video is
                    span
                    |  long.
                div.movie-count
                    | It was watched
                    span
                    |  times.
                div.wasted-time
                    | Humanity wasted
                    span
                    |  watching this!
                div.fun-fact
                div(style='clear:both;')

        div.content
            div.half-column
                div#popular-videos
                    | Videos :: Currently trending
                    div.videos
                        each val in trendingVideos
                            span.popular-video(data-video-id=val.id)
                                span.video-info
                                    a(href='/' + val.id)
                                        img.thumbnail(src=val.thumbnail)
                                    div.title
                                        a(href='/' + val.id + '/' + val.urlTitle) #{val.title}
                                    span.wasted-time(data-views='#{val.views}',data-length=val.length)
                                    a.view-movie(href='/' + val.id + '/' + val.urlTitle) How much time?


                div#popular-videos
                    | Videos :: All time popular
                    div.videos
                        each val in allTimePopularVideos
                            span.popular-video(data-video-id=val.id)
                                span.video-info
                                    a(href='/' + val.id)
                                        img.thumbnail(src=val.thumbnail)
                                    div.title
                                        a(href='/' + val.id + '/' + val.urlTitle) #{val.title}
                                    span.wasted-time(data-views=val.views,data-length=val.length)
                                    a.view-movie(href='/' + val.id + '/' + val.urlTitle) How much time?

            div.half-column
                div#products
                    | Products :: Random crazy stuff
                    div.products
                        each product in products
                            span.product
                                span.product-info
                                    a(href=product.url)
                                        img.thumbnail(src=product.img)
                                    div.name #{product.name}
                                    div.description #{product.description}

        include about